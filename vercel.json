{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "^/assets/(.*)$",
      "headers": {
        "cache-control": "max-age=31536000, immutable"
      },
      "dest": "/assets/$1"
    },
    {
      "src": "^/index.html$",
      "headers": {
        "cache-control": "no-cache"
      },
      "dest": "/index.html"
    },
    {
      "src": "^/(.*)$",
      "dest": "/index.html"
    }
  ]
}